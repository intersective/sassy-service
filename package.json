{
  "name": "sassy-service",
  "version": "1.0.0",
  "description": "",
  "main": "lambda.js",
  "config": {
    "region": "YOUR_AWS_REGION",
    "cloudFormationStackName": "AwsServerlessExpressStack",
    "functionName": "YOUR_SERVERLESS_EXPRESS_LAMBDA_FUNCTION_NAME",
    "accountId": "YOUR_ACCOUNT_ID"
  },
  "scripts": {
    "start": "node index.local.js",
    "config": "node ./scripts/configure.js",
    "deconfig": "node ./scripts/deconfigure.js",
    "local": "node scripts/local",
    "invoke-lambda": "aws lambda invoke --function-name $npm_package_config_functionName --region $npm_package_config_region --payload file://api-gateway-event.json lambda-invoke-response.json && cat lambda-invoke-response.json",
    "package": "aws cloudformation package --template ./cloudformation.yaml --output-template packaged-sam.yaml --region $npm_package_config_region",
    "deploy": "aws cloudformation deploy --template-file packaged-sam.yaml --stack-name $npm_package_config_cloudFormationStackName --capabilities CAPABILITY_IAM --region $npm_package_config_region",
    "package-deploy": "npm run package && npm run deploy",
    "setup": "npm install && npm run package-deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intersective/sassy-service.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/intersective/sassy-service/issues"
  },
  "homepage": "https://github.com/intersective/sassy-service#readme",
  "dependencies": {
    "async": "^2.6.0",
    "aws-serverless-express": "^3.0.2",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "del": "^3.0.0",
    "express": "^4.16.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-sass": "^3.1.0",
    "gulp-sass-vars": "^1.3.0",
    "lodash": "^4.17.4",
    "run-sequence": "^2.2.1"
  }
}
